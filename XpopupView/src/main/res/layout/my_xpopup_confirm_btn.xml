<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    app:cardCornerRadius="10dp"
    android:padding="0dp"
    app:cardBackgroundColor="@color/White"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <pers.julio.notepad.xpopup.Component.FocusTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="标题"
            android:textSize="@dimen/title_size"
            android:textColor="@color/myTextColor"

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center"
            android:text="内容"
            android:textColor="@color/myGrayDark"
            android:textSize="@dimen/des_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="#0fff" />
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_marginRight="20dp"
                android:layout_height="match_parent"
                android:background="@drawable/my_corner05_eeeeee"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="@string/cancel"
                android:textSize="@dimen/title_size"
                android:textColor="@color/myGrayDark" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:background="@drawable/my_corner05_33bbff"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="@string/confirm"
                android:textColor="@color/White"
                android:textSize="@dimen/title_size" />
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="#0fff" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>