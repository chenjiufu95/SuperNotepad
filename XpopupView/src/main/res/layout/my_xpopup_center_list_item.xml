<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_list_item_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:background="@color/White">

    <ImageView
        android:id="@+id/my_list_item_logo"
        android:layout_width="@dimen/item_height"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:padding="@dimen/icon_padding" />

    <TextView
        android:id="@+id/my_list_item_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/my_list_item_logo"
        android:textColor="@color/myTextColor"
        android:textSize="@dimen/title_size"
        tools:text="Key" />

    <TextView
        android:id="@+id/my_list_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/my_list_item_state"
        android:textColor="@color/myGrayDark"
        android:textSize="@dimen/des_size"
        tools:text="Value" />

    <ImageView
        android:id="@+id/my_list_item_state"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/selector_mesh_item" />

</RelativeLayout>