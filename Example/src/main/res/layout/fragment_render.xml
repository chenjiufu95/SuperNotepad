<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="渲染特效"
        android:textColor="@color/Blue"
        android:textSize="25sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0fff" />

    <LinearLayout
        android:id="@+id/ll_tabs_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0fff">

        <LinearLayout
            android:id="@+id/tab_layout01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab01_image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/icon_tab01" />
            <TextView
                android:id="@+id/tab01_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="组一"
                android:textSize="@dimen/help_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_layout02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab02_image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/icon_tab02" />
            <TextView
                android:id="@+id/tab02_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="组二"
                android:textSize="@dimen/help_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_layout_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_main_image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/icon_tab_main" />
            <TextView
                android:id="@+id/tab_main_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主页"
                android:textSize="@dimen/help_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_layout03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab03_image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/icon_tab03" />
            <TextView
                android:id="@+id/tab03_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="组三"
                android:textSize="@dimen/help_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_layout04"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab04_image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/icon_tab04" />
            <TextView
                android:id="@+id/tab04_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="组四"
                android:textSize="@dimen/help_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>